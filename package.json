{
  "name": "ilumina-audit-iaap-pro",
  "version": "6.3.0",
  "description": "Pipeline automatizado de auditorías de accesibilidad digital IAAP PRO – WCAG 2.1 / 2.2 con axe-core, Pa11y y Cypress.",
  "type": "module",
  "license": "MIT",
  "author": "Ilúmina Media",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node scripts/merge-auditorias.mjs",
    "local:ci": "npm run clean && npm run crawl:auto && npm run audit:sitemap && npm run audit:interactiva && npm run merge && npm run summary",
    "clean": "rimraf auditorias/* public/* || true && mkdir -p auditorias/{capturas,auditoria-sitemap,auditoria-interactiva,reportes} public/auditorias",
    "crawl:auto": "node scripts/crawl-auto.mjs",
    "validate:urls": "node scripts/validate-urls.mjs",
    "audit:sitemap": "npx cypress run --e2e --browser chrome --headless --config-file cypress.config.mjs --spec cypress/e2e/auditoría-sitemap.cy.js",
    "audit:interactiva": "npx cypress run --e2e --browser chrome --headless --config-file cypress.config.mjs --spec cypress/e2e/auditoría-interactiva.cy.js",
    "merge": "node scripts/merge-auditorias.mjs",
    "summary": "node scripts/generate-summary.mjs auditorias/reportes/merged-results.json",
    "export:xlsx": "node scripts/export-to-xlsx.mjs",
    "export:csv": "node scripts/export-to-csv.mjs",
    "export:pdf": "node scripts/export-to-pdf.mjs",
    "verify": "node scripts/verify-pipeline.mjs",
    "lint": "eslint . --ext .js,.mjs",
    "format": "prettier --write ."
  },
  "dependencies": {
    "axe-core": "^4.9.1",
    "chalk": "^5.3.0",
    "path": "^0.12.7",
    "puppeteer": "^23.5.0"
  },
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.7",
    "cypress": "^15.6.0",
    "cypress-axe": "^1.7.0",
    "cypress-real-events": "^1.15.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.39.1",
    "exceljs": "^4.4.0",
    "fs-extra": "^11.3.2",
    "json2csv": "^6.0.0-alpha.2",
    "pa11y": "^9.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10"
  },
  "cypress": {
    "viewportWidth": 1280,
    "viewportHeight": 800,
    "defaultCommandTimeout": 15000,
    "pageLoadTimeout": 120000,
    "video": false,
    "screenshotOnRunFailure": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-undef": "error",
      "no-console": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 90,
    "semi": true
  },
  "keywords": [
    "accesibilidad",
    "WCAG",
    "IAAP",
    "Cypress",
    "axe-core",
    "pa11y",
    "auditoría",
    "Ilúmina Media",
    "automatización"
  ]
}
