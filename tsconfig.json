{
  "compilerOptions": {
    /* ðŸ”§ Compatibilidad con Node 20 y mÃ³dulos ESM */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* ðŸ§  Mejora DX y compatibilidad con imports mixtos */
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,

    /* âš¡ Control de salida y chequeos */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "rootDir": ".",
    "outDir": "dist",

    /* ðŸ§© Tipos globales */
    "types": ["node", "cypress"]
  },
  "include": [
    "scripts/**/*.ts",
    "scripts/**/*.mjs",
    "cypress/**/*.ts",
    "cypress/**/*.js",
    "cypress.config.*"
  ],
  "exclude": ["node_modules", "dist"]
}


