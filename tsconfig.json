{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "rootDir": ".",
    "outDir": "dist",
    "types": ["node", "cypress"]
  },
  "include": [
    "scripts/**/*",
    "cypress/**/*",
    "cypress.config.*"
  ],
  "exclude": ["node_modules", "dist"]
}


