{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "cypress"],
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": true
  },
  "include": [
    "scripts/**/*.ts",
    "cypress/**/*.ts",
    "cypress/**/*.js",
    "cypress.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

