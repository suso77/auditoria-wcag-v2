{
  "compilerOptions": {
    /* -------------------------------------------
     * ‚öôÔ∏è Compatibilidad moderna con Node 20+ y ESM
     * ------------------------------------------- */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],

    /* -------------------------------------------
     * üì¶ Interoperabilidad
     * ------------------------------------------- */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* -------------------------------------------
     * üîç Estrictos pero sin bloquear
     * ------------------------------------------- */
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    /* -------------------------------------------
     * üß† Definiciones y rutas
     * ------------------------------------------- */
    "rootDir": ".",
    "outDir": "dist",
    "types": ["node", "cypress"]
  },
  "include": [
    "scripts/**/*",
    "cypress/**/*",
    "cypress.config.*"
  ],
  "exclude": ["node_modules", "dist"]
}



